# vim: filetype=neomuttrc
source /usr/share/mutt-wizard/mutt-wizard.muttrc # mw-autogenerated
source /home/vsibille/.config/mutt/accounts/1-mit.muttrc # mw-autogenerated
set mailcap_path = ~/.mailcap

auto_view text/* application/* image/* audio/*

# Show email headers in $EDITOR 
set edit_headers

# Layout
set date_format="%d.%m.%y %H:%M"
# set pager_index_lines = 6  # number of index lines to show atop pager
# set pager_context = 3      # number of context lines to show
set pager_stop             # don't go to next message automatically
set menu_scroll            # scroll in menus
set tilde                  # show tildes like in vim
unset markers              # no ugly plus signs
set attach_format="%u%D%I %t%4n %T%.140d%> [%.7m/%.10M, %.6e%?C?, %C?, %s]" # show full name of attachments

color indicator brightwhite brightblack 

color index_number blue default
color index_author green default '.*'
color index_subject white default '.*'

color index_author brightgreen default "~N"
color index_subject brightwhite default "~N"

color index brightred blue "~T"
color index_author brightyellow blue "~T"
color index_subject brightwhite blue "~T"

# Key bindings
bind index s sort-mailbox
bind index,pager r group-reply
bind index,pager R reply
bind pager D delete-message
bind pager gg top
bind pager G bottom

macro index,pager i1 '<sync-mailbox><enter-command>source /home/vsibille/.config/mutt/accounts/1-mit.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to vsibille@mit.edu" # mw-autogenerated
macro index,pager \cb "<pipe-message> urlscan<Enter>" "call urlscan to extract URLs out of a message"
macro attach,compose \cb "<pipe-entry> urlscan<Enter>" "call urlscan to extract URLs out of a message"
macro index,pager i2 '<sync-mailbox><enter-command>source /home/vsibille/.config/mutt/accounts/2-gmail.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to mrdakeryas@gmail.com" # mw-autogenerated
